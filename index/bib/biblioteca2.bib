	number = {n/a},
	urldate = {2020-02-06},
	journal = {Global Ecology and Biogeography},
	author = {Fahrig, Lenore},
	keywords = {habitat fragmentation, landscape fragmentation, landscape configuration, patch size, reserves, islands, habitat amount, fragments, isolates, SLOSS debate},
