@article{lee_modeling_2012,
	title = {Modeling the effects of riparian planting strategies on stream temperature: {Increasing} suitable habitat for endangered {Formosan} {Landlocked} {Salmon} in {Shei}-{Pa} {National} {Park}, {Taiwan}},
