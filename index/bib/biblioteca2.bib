@article{gaeta_eradication_2012,
	title = {Eradication via destratification: {Whole}-lake mixing to selectively remove rainbow smelt, a cold-water invasive species},
	volume = {22},
	issn = {1051-0761 (Print) 1051-0761 (Linking)},
	shorttitle = {Eradication via destratification: {Whole}-lake mixing to selectively remove rainbow smelt, a cold-water invasive species},
