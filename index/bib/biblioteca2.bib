	author = {{Karp Daniel S.} and {Daily Gretchen C.}},
	month = apr,
	year = {2014},
	keywords = {birds, Agriculture, agriculture, ecosystem services, pest control, Ecosystem services, Costa Rica, bats, coffee plantation, herbivorous arthropods, intraguild predation, predatory arthropods, species interactions},
	pages = {1065--1074},
	file = {Snapshot:D\:\\Zotero\\storage\\8R4IHHAQ\\13-1012.html:text/html;Karp Daniel S._Daily Gretchen C._2014_Cascading effects of insectivorous birds and bats in tropical coffee plantations.pdf:G\:\\Meu Drive\\Zotero\\Ecology2014\\Karp Daniel S._Daily Gretchen C._2014_Cascading effects of insectivorous birds and bats in tropical coffee plantations.pdf:application/pdf},
