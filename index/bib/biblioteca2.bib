@article{buzzelli_simulation_2013,
	title = {Simulation of {Potential} {Oyster} {Density} with {Variable} {Freshwater} {Inflow} (1965-2000) to the {Caloosahatchee} {River} {Estuary}, {Southwest} {Florida}, {USA}},
	volume = {52},
	issn = {0364-152X},
