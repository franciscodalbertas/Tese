@article{roschewitz_are_2005,
	title = {Are landscape complexity and farm specialisation related to land-use intensity of annual crop fields?},
	volume = {105},
	issn = {0167-8809},
	url = {http://www.sciencedirect.com/science/article/pii/S0167880904001823},
	doi = {10.1016/j.agee.2004.05.010},
	abstract = {Little is known about the predictive value of landscape complexity and farm specialisation for land-use intensity, although this is critical for regional agri–environmental schemes and conservation of biodiversity. Here, we analysed land-use intensity of annual crop fields of 30 farms in northern Germany that were located in 15 landscapes differing in structural complexity ranging from {\textless}15\% to {\textgreater}65\% non-crop habitats. The proportion of arable land per landscape was used as simple predictor of landscape complexity due to its close correlation with habitat-type diversity, and the proportion of arable land per farm acted as an indicator for farm specialisation due to its negative correlation with stock farming. Land-use intensity was quantified using questionnaires. Landscape complexity and farm specialisation were related to several but not all indicators of land-use intensity. Structurally simple landscapes were related to more nitrogen input and higher crop yields, and farms specialised on annual crops had reduced crop-species diversity, larger fields, higher crop yields and more pathogen species. In contrast to general expectations, pesticide use in annual crop fields was exceptionally high and not a function of landscape complexity or farm specialisation. Our results show that generalisations such as “farms specialised on annual crops and structurally simple landscapes show increased land-use intensity” may be misleading.},
	number = {1},
	urldate = {2019-08-09},
	journal = {Agriculture, Ecosystems \& Environment},
	author = {Roschewitz, Indra and Thies, Carsten and Tscharntke, Teja},
	month = jan,
	year = {2005},
	keywords = {Biodiversity, Cereal fields, Conservation, Grassland, Lower Saxony (Germany), Nitrogen fertilisation, Pesticide use},
	pages = {87--99},
	file = {ScienceDirect Snapshot:D\:\\Zotero\\storage\\UVX7NHA6\\S0167880904001823.html:text/html;Roschewitz et al_2005_Are landscape complexity and farm specialisation related to land-use intensity.pdf:G\:\\Meu Drive\\Zotero\\Agriculture, Ecosystems & Environment2005\\Roschewitz et al_2005_Are landscape complexity and farm specialisation related to land-use intensity.pdf:application/pdf},
