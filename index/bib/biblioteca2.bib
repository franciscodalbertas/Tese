	shorttitle = {Development and evaluation of multiple-objectieve decision-making methods for watershed management planning},
	url = {http://onlinelibrary.wiley.com/store/10.1111/j.1752-1688.2002.tb04334.x/asset/j.1752-1688.2002.tb04334.x.pdf?v=1&t=iqnyowhm&s=7e7c1980d94c718cb11d00a20cc135f7c3699fa4},
