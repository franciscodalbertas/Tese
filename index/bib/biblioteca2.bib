	year = {2015},
	keywords = {Biodiversity, biodiversity, conservation, management, climate, arboreal marsupials, ecosystem collapse, eucalypt forests, fire, fire severity, growth, leadbeaters possum, logging, mountain ash, southeastern australia, viability},
