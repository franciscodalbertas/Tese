	keywords = {Biodiversity, biodiversity, management, sustainability, level, patterns, science, agent-based model, agricultural land use, agricultural systems, european mountains, farm, fraxinus-excelsior l, integrated landscape assessment, land use and cover change, land-cover change, landscape multifunctionality, landscape scenario, rural development, transdisciplinarity},
