	year = {2007},
	keywords = {restoration, ecosystem, avoidance, chaoborus-flavicans larvae, daphnia, diel horizontal migration, fish, invertebrate predation, macrophytes, migration, refuge effect, shallow lake, size, spatial use, subtropical lakes},
	pages = {179--189},
