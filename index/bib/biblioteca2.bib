	journal = {Proceedings of the National Academy of Sciences},
	author = {Burney, Jennifer A. and Davis, Steven J. and Lobell, David B.},
	month = jun,
	year = {2010},
	pmid = {20551223},
	keywords = {agriculture, carbon price, climate change mitigation, greenhouse gas emissions, land use change},
