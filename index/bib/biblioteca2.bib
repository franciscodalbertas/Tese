	keywords = {reforestation, landscapes, scenarios, agricultural land, agricultural abandonment, carpathians, change detection, cropland, eastern-europe, forest transition, image classification, land reform, land use and land cover change, land-cover classification, neural-network, remote sensing, support vector machines, support vector machines (svm), transition, transition economies},
	pages = {614--628},
}

@article{kane_critical_2015,
	title = {Critical elevation levels for flooding due to sea-level rise in {Hawai}‘i},
