	pages = {064016},
	file = {Clark_Tilman_2017_Comparative analysis of environmental impacts of agricultural production.pdf:G\:\\Meu Drive\\Zotero\\Environmental Research Letters2017\\Clark_Tilman_2017_Comparative analysis of environmental impacts of agricultural production.pdf:application/pdf},
}

