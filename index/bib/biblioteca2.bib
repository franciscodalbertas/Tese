@article{larsen_modeling_2002,
	title = {Modeling channel management impacts on river migration: {A} case study of {Woodson} {Bridge} {State} {Recreation} {Area}, {Sacramento} {River}, {California}, {USA}},
	volume = {30},
	issn = {0364-152X},
