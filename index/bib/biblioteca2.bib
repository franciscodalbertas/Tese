	language = {English},
	journal = {Ecology and Society},
	author = {Fernandez, N and Kramer-Schadt, S and Thulke, H H},
	year = {2006},
	keywords = {conservation, management, risk assessment, consequences, population-dynamics, bialowieza primeval forest, classical swine-fever, densities, epidemiology, fallow deer, feasibility, introduced species, rule-based habitat models, spatially explicit population models, species reintroduction, sus scrofa, sus-scrofa, wildlife diseases},
