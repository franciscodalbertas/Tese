	month = dec,
	year = {2009},
	keywords = {landscape, river-basin, arboreal marsupials, oregon, USA, dynamics, forest restoration, uncertainty, south-eastern australia, box-ironbark, elicitation, management scenarios, multiple experts, stand structure, state-and-transition models, vertebrate diversity},
