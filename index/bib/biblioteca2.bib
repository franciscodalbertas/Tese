	month = aug,
	year = {2017},
	keywords = {Forest conservation, Forest restoration, Additionality, Mata Atlântica},
	pages = {177--186},
	file = {ScienceDirect Snapshot:D\:\\Zotero\\storage\\ICPNB94T\\S0743016717306058.html:text/html;Alarcon et al_2017_Additionality is in detail.pdf:G\:\\Meu Drive\\Zotero\\Journal of Rural Studies2017\\Alarcon et al_2017_Additionality is in detail.pdf:application/pdf},
