	keywords = {forest vegetation simulator, patterns, eastern united-states, acorn, hard mast, hard-mast, mountains, oak decline, prediction models, upland hardwood forest},
	pages = {222--230},
}

@article{boughton_floodplain_2013,
	title = {Floodplain {Rehabilitation} as a {Hedge} against {Hydroclimatic} {Uncertainty} in a {Migration} {Corridor} of {Threatened} {Steelhead}},
