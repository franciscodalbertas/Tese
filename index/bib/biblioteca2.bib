	abstract = {In the western part of The Netherlands, due to several economic factors, there is a strong pressure to extend urban activities. This means that a large open peatland area of special ecological interest, known as the Green Heart, will be increasingly threatened by urbanisation. In this area diary farming predominates, and the ecological value is largely dependent on this type of land use (meadow birds).  Scenarios for future landscapes have been developed for this area, taking into account different potential spatial layouts of urbanisation. The consequences for nature were evaluated with a decision support system. The LEDESS (Landscape Ecological Decision and Evaluation Support System) links available landscape ecological knowledge to a geographical information system (GIS) to evaluate the scenarios. LEDESS is based on a deterministic concept of the ecotope dependent on physiotope, vegetation dynamics, target vegetation and management, and of faunal habitat requirements which are also dependent on vegetation structure. It also takes into account the resistance of the landscape for migrating fauna species. It turns out that urbanisation will deteriorate the existing fragmented landscape. As an answer to the scenarios of urbanisation different options for nature restoration have been described in additional scenarios. The consequences were evaluated using the same computer model. The study has concluded that the negative effects of fragmentation can be compensated to some extent by enlargement of habitats, but the effectiveness of this depends highly on the spatial allocation of the new habitats.},
	language = {English},
	journal = {Landscape Perspectives of Land Use Changes},
	author = {Harms, W B and Knol, W C and Lankhorst, J R K},
	year = {2000},
	pages = {1--17},
}

@article{de_koning_modelling_2007,
