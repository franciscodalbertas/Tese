	month = feb,
	year = {2018},
	keywords = {Pollination, Biological control, Insecta, Coleoptera, Decomposition, Ecosystem functions, Experimental research, Hymenoptera, Nutrient cycling, Pest regulation},
	pages = {8--23},
	file = {ScienceDirect Snapshot:D\:\\Zotero\\storage\\HJLN5TZ4\\S1439179117300841.html:text/html;Noriega et al_2018_Research trends in ecosystem services provided by insects.pdf:G\:\\Meu Drive\\Zotero\\Basic and Applied Ecology2018\\Noriega et al_2018_Research trends in ecosystem services provided by insects.pdf:application/pdf},
}

@article{wegier_beef_2018,
	series = {Insect {Effects} on {Ecosystem} services},
	title = {Beef or grasshopper hamburgers: {The} ecological implications of choosing one over the other},
