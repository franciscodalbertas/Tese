	urldate = {2018-08-20},
	journal = {Agricultural Economics},
	author = {Castro, Eduardo Rodrigues de and Teixeira, Erly Cardoso},
	year = {2012},
	keywords = {Agricultural supply, D240, Multi-output analysis, Q110, Q140, Q180, Rural credit, Translog restricted profit function},
	pages = {293--302},
	file = {Snapshot:D\:\\Zotero\\storage\\KPGN3GNK\\j.1574-0862.2012.00583.html:text/html;Castro_Teixeira_2012_Rural credit and agricultural supply in Brazil.pdf:G\:\\Meu Drive\\Zotero\\Agricultural Economics2012\\Castro_Teixeira_2012_Rural credit and agricultural supply in Brazil.pdf:application/pdf},
