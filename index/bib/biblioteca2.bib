	author = {Barnett, A. and Fargione, J. and Smith, M. P.},
	month = mar,
	year = {2016},
	keywords = {Biodiversity, biodiversity, conservation, ecosystem services, restoration, bottomland hardwood reforestation, cost, habitat, impacts, land-use, optimization, river-basin, spatial analysis, spatial decision-support},
	pages = {223--237},
}

@article{bagdon_managing_2016,
