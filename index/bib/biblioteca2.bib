	keywords = {Biodiversity, biodiversity, landscape, growth, boreal forest, understorey vegetation, simulation, Soil, plant diversity, biocalc, coarse woody debris, dominated ecosystem, ecological-coenotic groups, efimod, forest types, plant functional types, species diversity, western upper michigan},
