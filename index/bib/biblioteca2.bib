	author = {Ainsworth, C. H. and Pitcher, T. J.},
	year = {2005},
	keywords = {impacts, models, shifts, climate variability, fisheries, pacific-ocean, sardines},
	pages = {419--438},
}

@article{honea_evaluating_2009,
	title = {Evaluating habitat effects on population status: influence of habitat restoration on spring-run {Chinook} salmon},
