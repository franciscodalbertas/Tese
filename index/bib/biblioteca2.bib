	author = {Jung, Suhyun and Rasmussen, Laura Vang and Watkins, Cristy and Newton, Peter and Agrawal, Arun},
	month = jun,
	year = {2017},
	keywords = {Assets, Cadastro Ambiental Rural (CAR), Forest Code, Impact, Livelihood},
	pages = {53--61},
