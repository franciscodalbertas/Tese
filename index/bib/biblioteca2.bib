	author = {Fujii, S and Kubota, Y and Enoki, T},
	month = oct,
	year = {2010},
	keywords = {landscape, management, fragmentation, succession, patterns, dynamics, landscape matrix, richness, cutting cycle, global vegetation model, okinawa island, seib-dgvm, sprouting},
