	author = {Clark, C M and Morefield, P E and Gilliam, F S and Pardo, L H},
	year = {2013},
	keywords = {Biodiversity, biodiversity, restoration, species richness, communities, cessation, critical loads, diversity, ecoregion, europe, grasslands, herbaceous, level, nitrogen critical loads, nitrogen deposition},
